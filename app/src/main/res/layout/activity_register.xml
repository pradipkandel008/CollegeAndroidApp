<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FF80AB"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp"
        app:contentPadding="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/page_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="REGISTER"
                android:textColor="#FAF8F7"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/page_heading"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:hint="Enter First Name"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/et_first_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:hint="Enter Last Name"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/et_last_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:hint="Enter Phone Number"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/et_phone"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:hint="Enter Email"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/et_batch"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/et_email"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_school_black_24dp"
                android:hint="Enter Batch (eg 18,19)"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:inputType="number"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/rg_gender"
                android:layout_below="@id/et_batch"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"
                    android:textColor="#fff"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/rb_male"
                    android:checked="true"
                    android:textColor="#fff"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/rb_female"
                    android:textColor="#fff"/>
            </RadioGroup>

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/rg_gender"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Enter Username (College ID)"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/et_user_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_password"
                android:layout_marginTop="10dp"
                android:background="@drawable/register"
                android:text="Register"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already a member?"
                    android:id="@+id/nm"
                    android:gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_register"
                    android:text="Sign In"
                    android:layout_below="@id/nm"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/register"
                    android:textColor="#fff"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
